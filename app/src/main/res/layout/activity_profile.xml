<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/purple"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/profile_shape"
        android:elevation="15dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERSONAL DETAILS"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="@color/purple"
            android:textSize="20dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEMBER NAME:"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_shape"
            android:elevation="4dp"
            android:paddingLeft="10dp"
            android:text="KAAHWA JANET"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEMBERSHIP NO"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:editable="false"
            android:background="@drawable/input_shape"
            android:elevation="4dp"
            android:paddingLeft="10dp"
            android:text="C13609057066"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE OF BIRTH"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_shape"
            android:elevation="4dp"
            android:paddingLeft="10dp"
            android:editable="false"
            android:text="1966-12-14"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE OF EMPLOYMENT"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:editable="false"
            android:background="@drawable/input_shape"
            android:elevation="4dp"
            android:paddingLeft="10dp"
            android:text="2002-08-09"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOINING DATE"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:editable="false"
            android:background="@drawable/input_shape"
            android:elevation="4dp"
            android:paddingLeft="10dp"
            android:text="2002-10-18"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RETIREMENT DATE"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:editable="false"
            android:background="@drawable/input_shape"
            android:elevation="4dp"
            android:paddingLeft="10dp"
            android:text="2031-12-14"
            android:textColor="@color/black" />


    </LinearLayout>


</RelativeLayout>